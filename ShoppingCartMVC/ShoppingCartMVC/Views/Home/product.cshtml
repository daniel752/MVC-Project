@model IEnumerable<ShoppingCartMVC.Models.tblProducts>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate fadeInUp ftco-animated">
                <h2 style="color: red" class="mb-4">Our Menu</h2>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchBox").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#result .col-md-6").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <div class="container">
        <div style="margin-bottom:20px" class="form-group">
            <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
        </div>
        <div class="row" id="result">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate fadeInUp ftco-animated">
                    <div class="product">
                        <a href="@Url.Action("AddtoCart", "Home", new { id = @item.ProID })" class="img-prod">
                            <img class="img-fluid" src="~/Uploads/@item.Image" style="height:250px" alt="@item.Description">
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3><a style="color:#000" href="@Url.Action("AddtoCart", "Home", new { id = @item.ProID })">@item.Name</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span style="color: #000" class="price-sale">$@item.Unit</span></p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a style="background-color:white" href="@Url.Action("AddtoCart", "Home", new { id = @item.ProID })" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i style="color:red" class="ion-ios-cart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>