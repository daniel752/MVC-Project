@model IEnumerable<ShoppingCartMVC.Models.tblCategories>
@{
    ViewBag.Title = "Index";
}
<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

<div class="container">
    <h4>Categories</h4>
    <div class="form-group">
        <input style="background-color:red;" type="text" class="form-control col-lg-4 ml-auto" placeholder="Search Here" id="searchBox" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody  id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CatId</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = item.CatId})" class="btn btn-secondary px-4">Edit</a>
                        <a href="@Url.Action("Delete", "Category", new { id = item.CatId})" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


